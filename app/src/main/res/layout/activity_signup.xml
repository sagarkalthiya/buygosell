<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_backgound"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2.5"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="8.2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="35dp"
                android:paddingRight="35dp">


                <EditText
                    android:id="@+id/et_f_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/user_icon_edittext"
                    android:hint="  Enter Your First Name"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"
                    android:textSize="15dp"
                    android:theme="@style/EditTextTheme" />

                <EditText
                    android:id="@+id/et_l_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/user_icon_edittext"
                    android:hint="  Enter Your Last Name"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"
                    android:textSize="15dp"
                    android:theme="@style/EditTextTheme" />

                <EditText
                    android:id="@+id/dff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/mobile_icon_edittext"
                    android:hint="  Enter Your Phone"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"
                    android:textSize="15dp"
                    android:theme="@style/EditTextTheme"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/email_icon_edittext"
                    android:hint="  Enter Your Email"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:layout_below="@+id/editText1"
                    android:paddingRight="15dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"
                    android:textSize="15dp"
                    android:theme="@style/EditTextTheme" />





                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/phone_icon_edittext"
                    android:hint=" Enter Your Password"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"
                    android:textSize="15dp"
                    android:theme="@style/EditTextTheme" />

                <EditText
                    android:id="@+id/et_conform_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/phone_icon_edittext"
                    android:hint=" Retype Your Password"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:layout_below="@+id/editText4"
                    android:paddingRight="15dp"
                    android:textColor="#Fff"
                    android:textColorHint="#fff"
                    android:textSize="15dp"
                    android:theme="@style/EditTextTheme" />


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextcxv"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@null" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/spinner"
                    android:layout_weight="1"
                    android:background="@null"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/spinner2"
                    android:layout_weight="1"
                    android:background="@null"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2.3"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:gravity="center|top"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <TextView
                        android:id="@+id/singbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="15dp"
                        android:textSize="18dp"
                        android:textColor="@color/White"
                        android:text="@string/signup_txt" />
                </android.support.v7.widget.CardView>




            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
