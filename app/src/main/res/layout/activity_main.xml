<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <FrameLayout
        android:id="@+id/MainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/main_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="12dp">


            <TextView
                android:id="@+id/home_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_home}    Home"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/product_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingRight="8dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_product_hunt}    Product"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/contect_us_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_phone}    Contect us"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/about_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_home}    About Us"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/profile_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_user}     Profile"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/payment_info_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_credit_card}    Payment Info"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/my_order_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_cart_arrow_down}    My Orders"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/my_sells_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_cart_arrow_down}    My Sells"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/addres_info_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_map_marker}     Address Info"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/login_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_sign_in}    Login"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/logout_menu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:text="{fa_sign_out}    Logout"
                android:textSize="20dp" />
        </LinearLayout>
        </ScrollView>
    </android.support.design.widget.NavigationView>

    <!--
        app:menu="@menu/activity_main_drawer"-->
</android.support.v4.widget.DrawerLayout>
